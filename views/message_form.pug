extends layout

block content
  style.
    .form-container{
      width: 300px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    h1{
      font-size: 24px;
      text-align: center;
      margin-bottom: 20px;
    }
    .form-group{
      margin-bottom: 20px;
    }
    label{
      font-weight: bold;
      margin-bottom: 5px;
    }
    input.form-control{
      margin-left: 10px;
      width: 65%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
    }
    button.btn.btn-primary{
      width: 100%;
      padding: 10px;
      background-color: #0077cc;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

  .form-container
    h1 Enter Message
    form(action="" method="POST")
      .form-group
        label(for="title") Title:
        input.form-control(type="text" id="title" name="title" placeholder="Enter title" required)
      .form-group
        label(for="text") Text:
        input.form-control(type="text" id="text" name="text" placeholder="Enter text" required)
      button.btn.btn-primary(type="submit") Submit
